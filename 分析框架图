        // 布局配置
        function getLayout() {
            return {
                xaxis: {
                    showgrid: false,
                    zeroline: false,
                    showticklabels: false,
                    range: [0, 16]
                },
                yaxis: {
                    showgrid: false,
                    zeroline: false,
                    showticklabels: false,
                    range: [0, 10]
                },
                margin: {t: 30, b: 30, l: 30, r: 30},
                plot_bgcolor: 'rgba(0,0,0,0)',
                paper_bgcolor: 'rgba(0,0,0,0)',
                shapes: [
                    // 箭头头部
                    createArrow(3, 3.3, 0, -1, '#4d4d4d'),
                    createArrow(6.5, 3.3, 0, -1, '#4d4d4d'),
                    createArrow(10, 3.3, 0, -1, '#4d4d4d'),
                    createArrow(13.5, 3.3, 0, -1, '#4d4d4d'),
                    createArrow(4.8, 7.5, -1, 0, '#4d4d4d'),
                    createArrow(11.2, 7.5, 1, 0, '#4d4d4d'),
                    createArrow(8, 2.5, 0, 1, '#1a9641')
                ],
                annotations: [
                    // 路径标注
                    createAnnotation(5.5, 6.5, '行为策略调整', 0),
                    createAnnotation(8, 8.2, '关系网络演化', 0),
                    createAnnotation(12.5, 5.5, '社会资本反哺', -45)
                ]
            };
        }
        
        // 创建箭头形状
        function createArrow(x, y, dx, dy, color) {
            return {
                type: 'path',
                path: `M ${x},${y} L ${x - dx*0.5 - dy*0.3},${y - dy*0.5 + dx*0.3} L ${x - dx*0.5 + dy*0.3},${y - dy*0.5 - dx*0.3} Z`,
                fillcolor: color,
                line: {color: color}
            };
        }
        
        // 创建路径标注
        function createAnnotation(x, y, text, angle) {
            return {
                x: x,
                y: y,
                text: text,
                showarrow: false,
                font: {
                    size: 13,
                    color: '#4d4d4d'
                },
                textangle: angle,
                bordercolor: '#cccccc',
                borderpad: 4,
                bgcolor: 'rgba(255, 255, 255, 0.7)'
            };
        }
